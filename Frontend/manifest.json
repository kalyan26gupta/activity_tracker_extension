{
  "manifest_version": 3,
  "name": "Activity Tracker Extension",
  "version": "1.0",
  "description": "Tracks detailed browser activity and sends to backend.",
  "permissions": ["activeTab", "storage", "notifications", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
